        ModelID = Cdata.ModelID;
    }
    if ((ModelID < 1 && NodeID < 1) && Mid < 1) { function.WriteErrMsg("参数错误"); }
    M_ModelInfo model = modBll.GetModelById(ModelID);
    M_Node nodeMod = nodeBll.SelReturnModel(NodeID);
