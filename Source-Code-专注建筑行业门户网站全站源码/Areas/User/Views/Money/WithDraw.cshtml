@using ZoomLa.Model
@{
    M_UserInfo mu = ViewBag.mu;
    Layout = "~/Areas/User/Views/Shared/_layout.cshtml";
}
@section head{
<title>提现申请</title>
}
@section content{
<div id="pageflag" data-nav="shop" data-ban="UserInfo"></div>
<div class="container">
    <ol class="breadcrumb">
        <li><a title="会员中心" href="@Url.Action("Default","")">会员中心</a></li>
        <li><a href="@Url.Action("WithDrawLog","Money")">提现日志</a></li>
        <li class="active">提现申请</li>
    </ol>
</div>
<div class="container">
    <form method="post" action="WithDraw_Add">
        <table class="table table-bordered table-hover table-striped">
            <tr><td class="td_m">现有金额：</td><td><span class="r_red">@mu.Purse.ToString("f2")</span></td></tr>
            <tr><td>提现金额：</td><td>
                <input type="text" ID="Money_T" name="Money_T" class="form-control text_300 digits required" title="金额不正确"/><span class="r_red">*</span>
            </td></tr>
            <tr><td>开户人：</td><td>
                <input type="text" class="form-control  text_300 required" ID="PName_T" name="PName_T" title="开户人姓名不能为空" /><span class="r_red">*</span>
                                </td></tr>
            <tr><td>银行名称：</td><td><input type="text" class="form-control text_300 required" ID="Bank_T" name="Bank_T" title="银行名称不能为空" /><span class="r_red">*</span>
                            </td></tr>
            <tr><td style="line-height:120px;">开户银行：</td><td>
                <textarea ID="Remark_T" name="Remark_T" class="form-control text_300 required" Style="height: 120px;resize:none;" ></textarea><span class="r_red">*</span>
                              </td></tr>
            <tr><td>银行卡号：</td><td>
                <input type="text" class="form-control text_300 required" title="银行卡号不正确" ID="Account_T" name="Account_T" /><span class="r_red">*</span>
                @*<asp:RequiredFieldValidator ID="R3" ControlToValidate="Account_T" ErrorMessage="银行卡号不能为空" ForeColor="Red" Display="Dynamic"/>
                <asp:RegularExpressionValidator ID="R4" ControlToValidate="Account_T" ErrorMessage="请输入16或19位银行卡号" ForeColor="Red" ValidationExpression="^(\d{16}|\d{19})$" Display="Dynamic"/>*@
                                </td></tr>
            <tr><td></td><td><input type="submit" class="btn btn-primary" value="申请提现" /></td></tr>
        </table>
</form>
</div>
}
@section script{
<script src="/JS/ZL_Regex.js"></script>
<script>
    $(function () {
        $("form").validate();
    })
</script>
}
