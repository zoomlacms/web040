@{
    Layout = "~/Areas/User/Views/Shared/_layout.cshtml";
}
@section head{
<title>搜索好友</title>
}
@section content{
 <div id="pageflag" data-nav="index" data-ban="zone"></div>
    <div class="container">
        <ol class="breadcrumb">
            <li><a title="会员中心" href="@Url.Action("Default","")">会员中心</a></li>
            <li class="active">用户搜索 [<a href="FriendList">我的好友</a>]</li>
        </ol>
    </div>
    <div class="container btn_green">
        <table style="width: 569px; height: 175px;" class="table table-hover table-bordered padding0">
            <tr>
                <td colspan="2">
                    <font color="#336699"><strong class="f14">模糊查找</strong></font>
                </td>
            </tr>
            <tr>
                <td class="value-right">性别：
                </td>
                <td>
                    <select id="sex_dp" runat="server" class="form-control value_150">
                        <option value="0">所有</option>
                        <option value="1">男</option>
                        <option value="2">女</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td class="value-right">年龄范围：
                </td>
                <td>
                    <select class="form-control value_150" name="age" id="age" runat="server">
                        <option value="0">全部</option>
                        <option value="0-18">18以下</option>
                        <option value="18-25">18-25</option>
                        <option value="25-33">25-33</option>
                        <option value="33-45">33-45</option>
                        <option value="45-100">45以上</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td class="value-right">&nbsp;
                </td>
                <td>
                    <span class="btmbian">
                        <input type="button" ID="btnSecher" runat="server" class="btn btn-primary" value="查找" OnClick="btnSecher_Click" />
                    </span>
                </td>
            </tr>
        </table>
        <br />
        <br />
        <table style="width: 569px; height: 165px;" class="table table-bordered table-hover padding0">
            <tr>
                <td colspan="2">
                    <font color="#336699"><strong>精确查找</strong></font>
                </td>
            </tr>
            <tr>
                <td class="value-right">对方昵称：
                </td>
                <td>
                    <input type="text" runat="server" ID="UserName_T" size="40" MaxLength="20" class="form-control value_150" />
                    <input type="text" runat="server" class="btn btn-primary" ID="UserName_Skey_Btn" value="查找" OnClick="UserName_Skey_Btn_Click" ValidationGroup="UName" />
                </td>
            </tr>
            <tr>
                <td class="value-right">对方会员ID号：
                </td>
                <td>
                    <input type="text" runat="server" ID="UserID_T" class="form-control value_150" maxlength="10" />
                    <input type="button" ID="UserID_Skey_Btn" runat="server" value="查找" class="btn btn-primary" OnClick="UserID_Skey_Btn_Click" ValidationGroup="UserID"></input>
                    @*<asp:RangeValidator ID="UidR1" runat="server" MaximumValue="99999" MinimumValue="1" Type="Integer" ErrorMessage="请输入数字" ControlToValidate="UserID_T" Display="Dynamic" ValidationGroup="UserID"/>
                    <asp:RequiredFieldValidator runat="server" ID="UidR2" ForeColor="Red" ErrorMessage="用户ID不能为空" ValidationGroup="UserID" ControlToValidate="UserID_T" Display="Dynamic" />*@
                </td>
            </tr>
        </table>
    </div>
}
@section script{}